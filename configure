#!/usr/bin/env sh

:> options.mk
for lib in exif gif; do
    if printf "int main(){}\n" | ${CC:-cc} -l"$lib" -o /dev/null -x c - 2>/dev/null; then
        printf "HAVE_LIB%s=1\n" "$lib" | tr '[:lower:]' '[:upper:]' >> options.mk
        printf "OPTIONAL_LIBS+=-l%s\n" "$lib" >> options.mk
    fi
done
